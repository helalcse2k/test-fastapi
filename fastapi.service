[Unit]
Description=Demo fastapi application
After=network.target

[Service]
User=helal
Group=helal
WorkingDirectory=/home/helal/app/src
Environment="PATH=/home/helal/app/venv/bin"
EnvironmentFile=/home/helal/.env
ExecStart=/home/helal/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target